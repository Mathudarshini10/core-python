import pandas as pd

df = pd.DataFrame({
    'Name': ['Alice', 'Bob', 'David'],
    'Age': [25, 32, 47],
    'City': ['NY', 'LA', 'NY'],
    'Salary': [70000, 90000, 120000]
})

print("DataFrame:\n", df)
print("\nHead and Shape:\n", df.head(), df.shape)

print("\nSorted by Age:\n", df.sort_values('Age'))

print("\nPeople with Age > 30:\n", df[df['Age'] > 30])

dept = pd.DataFrame({
    'Name': ['Alice', 'Bob', 'David'],
    'Dept': ['HR', 'Eng', 'Eng']
})

merged = pd.merge(df, dept, on='Name')
print("\nMerged DataFrame:\n", merged)

print("\nAverage Salary by City:\n", df.groupby('City')['Salary'].mean())


#output

